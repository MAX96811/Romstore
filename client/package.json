{
  "name": "romstore-client",
  "version": "1.0.0",
  "description": "RomStore Desktop Client",
  "author": "RomStore Team",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.romstore.client",
    "productName": "RomStore",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "icon": "renderer/LOGO.png",
      "category": "Game",
      "executableArgs": ["--no-sandbox"]
    },
    "files": [
      "**/*"
    ]
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chokidar": "^5.0.0",
    "form-data": "^4.0.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
